<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="titlestyle">
        <!-- Customize your theme here. -->
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">#00f</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="G1_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="A1_Font">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A3_Font">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    <style name="B1_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff0e0e0e</item>
    </style>

    <style name="B5_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff0e0e0e</item>
        <item name="android:shadowColor">@color/semi_transparent_w</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>


</resources>
