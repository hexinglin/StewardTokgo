<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Setting.SettingActivity">
    <per.hxl.stewardtokgo.view.TitleItenView
        xmlns:Steward="http://schemas.android.com/apk/res/per.hxl.stewardtokgo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        Steward:mytitle ="设置中心">
    </per.hxl.stewardtokgo.view.TitleItenView>
    <per.hxl.stewardtokgo.view.SettingItemView
        xmlns:Steward="http://schemas.android.com/apk/res/per.hxl.stewardtokgo"
        android:id="@+id/setting_applock"
        Steward:destitle="程序锁监控设置"
        Steward:desoff="程序锁监控已关闭"
        Steward:deson="程序锁监控已开启"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </per.hxl.stewardtokgo.view.SettingItemView>
    <per.hxl.stewardtokgo.view.SettingItemView
        xmlns:Steward="http://schemas.android.com/apk/res/per.hxl.stewardtokgo"
        android:id="@+id/setting_prompt"
        Steward:destitle="提示音设置"
        Steward:desoff="提示音已关闭"
        Steward:deson="提示音已开启"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </per.hxl.stewardtokgo.view.SettingItemView>
    <RelativeLayout
        android:id="@+id/setting_ServerUrl"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="服务器地址配置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#000"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <per.hxl.stewardtokgo.view.SettingItemView
        xmlns:Steward="http://schemas.android.com/apk/res/per.hxl.stewardtokgo"
        android:id="@+id/setting_timesw"
        Steward:destitle="服务器地址"
        Steward:desoff="prd环境"
        Steward:deson="qa环境"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </per.hxl.stewardtokgo.view.SettingItemView>
    <per.hxl.stewardtokgo.view.SettingItemView
        xmlns:Steward="http://schemas.android.com/apk/res/per.hxl.stewardtokgo"
        android:id="@+id/setting_studysw"
        Steward:destitle="问答监控设置"
        Steward:desoff="问答监控关闭"
        Steward:deson="问答监控打开"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </per.hxl.stewardtokgo.view.SettingItemView>
</LinearLayout>
